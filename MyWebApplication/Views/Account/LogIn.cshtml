<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login Page</title>
    <style>
        body {
            background: linear-gradient(to right, #3494E6, #EC6EAD);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            text-align: center;
            color: white;
        }

        h1, h2 {
            color: white;
            margin-bottom: 20px;
        }

        form {
            background-color: #fff;
            border: 1px solid #000;
            padding: 50px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 0 auto;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
            color: #333;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            background-color: #333;
            color: #fff;
            border: none;
            padding: 15px 30px;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #555;
            }

        p.error {
            color: #ff0000;
        }

        #clock {
            font-size: 100px;
            color: white;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h2 id="date"></h2>
    <h1 id="clock"></h1>
    <h2>Time In</h2>

    <form method="post">
        <div>
            <label for="username">Log-in ID:</label>
            <input type="text" id="username" name="username" required />
        </div>

        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required />
        </div>

        <div>
            <button type="submit">Enter</button>
        </div>
    </form>

    <script>
        // Function to display the current time and date
        function displayTimeAndDate() {
            const clockElement = document.getElementById("clock");
            const dateElement = document.getElementById("date");
            const now = new Date();

            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const seconds = now.getSeconds().toString().padStart(2, '0');

            // Get the current date in the format "Month Day, Year"
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            const formattedDate = now.toLocaleDateString('en-US', options);

            clockElement.textContent = `${hours}:${minutes}:${seconds}`;
            dateElement.textContent = formattedDate;
        }

        // Update the clock and date every second
        setInterval(displayTimeAndDate, 1000);

        // Initial display of the clock and date
        displayTimeAndDate();
    </script>
</body>
</html>
