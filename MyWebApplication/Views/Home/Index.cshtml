@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>

        body {
            background: linear-gradient(to right, #3494E6, #EC6EAD);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            color: #333;
        }

        .header {
            text-align: center;
            margin-top: 50px;
            color: #75E8FA;
        }

        .top-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
        }

            .top-section img {
                max-width: 50%;
                border-radius: 10%;
            }

            .top-section .text {
                flex-grow: 1;
                padding-left: 20px;
                font-size: 3.5rem;
                color: #fff;
            }

        .bottom-section {
            text-align: center;
            margin-top: 40px;
        }

        .icon {
            display: inline-block;
            margin: 20px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .icon i {
                font-size: 3rem;
                color: #3494E6;
                margin-bottom: 10px;
            }

            .icon a {
                text-decoration: none;
                color: #333;
                display: block;
                font-size: 1.5rem;
                margin-top: 10px;
            }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="top-section">
            <img src="https://seranking.com/blog/wp-content/uploads/2021/01/image.jpeg" alt="Image" />
            <div class="text">
                <i class="fas fa-home"></i> Time In / Time Out
            </div>
        </div>
        <div class="bottom-section">
            <div class="icon">
                <i class="fas fa-calendar-alt"></i>
                <a asp-area="Center" asp-controller="Account" asp-action="Users">Time Sheet</a>
            </div>
            <div class="icon">
                <i class="fas fa-user-plus"></i>
                <a asp-area="Center" asp-controller="Account" asp-action="SignUp">Registration</a>
            </div>
            <div class="icon">
                <i class="fas fa-book"></i>
                <a href="#">Visitor Log</a>
            </div>
        </div>
    </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
</html>
